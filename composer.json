{
    "name": "vsamovarov/laravel-localizer",
    "description": "Very easy localization for Laravel",
    "keywords": [
        "vsamovarov",
        "laravel-localizer"
    ],
    "homepage": "https://github.com/vsamovarov/laravel-localizer",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Heychenko Victor",
            "email": "v.heychenko@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.2",
        "laravel/framework": "^6.0||^7.0||^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0",
        "orchestra/testbench": "^4.0",
        "orchestra/testbench-browser-kit": "^4.0"
    },
    "suggest": {
        "ext-intl": "*"
    },
    "autoload": {
        "psr-4": {
            "VSamovarov\\LaravelLocalizer\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "VSamovarov\\LaravelLocalizer\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "extra": {
        "laravel": {
            "providers": [
                "VSamovarov\\LaravelLocalizer\\LocalizerServiceProvider"
            ],
            "aliases": {
                "Localizer": "VSamovarov\\LaravelLocalizer\\Facades\\Localizer"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
